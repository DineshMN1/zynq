# Server
PORT=4000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/zynqcloud
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=user
DATABASE_PASSWORD=password
DATABASE_NAME=zynqcloud

# JWT & Cookies
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=7d
COOKIE_DOMAIN=localhost

# SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=user
SMTP_PASS=password
SMTP_FROM=zynqCloud <no-reply@yourdomain.com>

# S3 / MinIO
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=zynq-cloud
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_FORCE_PATH_STYLE=true

# Telemetry
ENABLE_TELEMETRY=false
TELEMETRY_URL=

# Invite settings
INVITE_TOKEN_TTL_HOURS=72
PUBLIC_REGISTRATION=false

# Frontend
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100