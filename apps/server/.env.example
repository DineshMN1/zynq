# Backend-only development environment
# For self-host deployment, use root .env.example instead.

# Server
PORT=4000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/zynqcloud
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=user
DATABASE_PASSWORD=password
DATABASE_NAME=zynqcloud

# JWT & Cookies
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=7d
COOKIE_DOMAIN=localhost

# Email / SMTP
EMAIL_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=user
SMTP_PASS=password
SMTP_FROM=zynqCloud <no-reply@yourdomain.com>

# Local file storage + encryption
FILE_ENCRYPTION_MASTER_KEY=REPLACE_WITH_32_BYTE_BASE64_KEY
FILE_STORAGE_PATH=/data/files

# Telemetry
ENABLE_TELEMETRY=false
TELEMETRY_URL=

# Invite settings
INVITE_TOKEN_TTL_HOURS=72
PUBLIC_REGISTRATION=false

# Frontend
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TTL=60000
